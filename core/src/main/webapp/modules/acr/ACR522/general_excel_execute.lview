<a:screen xmlns:a="http://www.leaf-framework.org/application" trace="true">
    <a:init-procedure>
        <a:model-query model="acr.acr_get_sys_import_head_id" rootPath="header"/>
        <a:import-excel header_id="${/model/header/record/@header_id}" separator="," status_field="/parameter/@ImportSuccess" template_code="ACRIMPORT" user_id="${/session/@user_id}"/>
        <a:model-query defaultWhereClause="header_id=${/model/header/record/@header_id} and TEMPLATE_CODE = &apos;ACRIMPORT&apos;" model="acr.acr_plan_import_get_header_status" rootPath="status"/>
        <a:model-query autoCount="false" defaultWhereClause="header_id=${/model/header/record/@header_id} order by line_id" fetchAll="true" model="acr.acr_plan_import_get_fnd_data" rootPath="importData"/>
    </a:init-procedure>
    <a:view>
        <a:link id="acr522_create_receipt_trx_link" url="${/request/@context_path}/modules/acr/ACR522/acr_invoice_period_maintain.screen"/>
        <a:link id="acr522_excel_result_link" model="acr.ACR522.acr_invoice_period_maintain" modelaction="execute"/>
        <script><![CDATA[

           function submmit(){
               Aurora.request({
	                url: $('acr522_excel_result_link').getUrl(),
	                para: {header_id :'${/model/header/record/@header_id}'},
	                success: function(res) {
                        parent.Aurora.SideBar.enable = true;
                    	Aurora.SideBar.show({
                            msg: '导入成功',
                            duration: 5000
                        });
                        setTimeout(function(){window.location.href = $('acr522_create_receipt_trx_link').getUrl();},'500');
	                },
	                failure:function(){
	                    Aurora.showMessage('${l:PROMPT}','导入出错！',function(){
	                        location.href = $('acr522_create_receipt_trx_link').getUrl();
	                    });
	                },
	                error:function(){
	                    Aurora.showMessage('${l:PROMPT}','导入出错！',function(){
	                        location.href = $('acr522_create_receipt_trx_link').getUrl();
	                    });
	                },
	                scope: this
	            });
            }
            
        ]]></script>
        <script><![CDATA[
	  		Aurora.onReady(submmit());
	  	]]></script>
    </a:view>
</a:screen>
