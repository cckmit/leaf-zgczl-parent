	             var document_number = record.get('contract_number');
	             var url='${/request/@context_path}/modules/cont/CON500/lease_atm_batch_dl.svc?table_name='+document_table+'&table_pk_value='+document_id+'&doc_code='+document_number;
	             window.open(url);
             }
