        <a:screenBody>
            <a:screenTopToolbar>
                <a:screenTitle/>
                <a:gridButton click="reset" text="HLS.RESET"/>
                <a:gridButton click="query" text="HLS.QUERY"/>
            </a:screenTopToolbar>
            <a:form column="3" marginWidth="30" title="查询条件">
