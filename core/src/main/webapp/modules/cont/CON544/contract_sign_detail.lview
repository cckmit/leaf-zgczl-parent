            function detail_upload_window(record_id) {
            
                var url = $('con_contract_uploadfile').getUrl() + '?table_name=CON_CONTRACT_CONTENT_SIGN&header_id=' + record_id;
                var win = new Aurora.Window({
                    url: url,
