                    var url = $('con_contract_payment_detail_link').getUrl();
                    return '<a  href="#' + Math.random() + '" onclick="openPaymentWindow(\''+ url + '\',' + contract_id + ')">' + Leaf.formatMoney(value) + '</a>';
