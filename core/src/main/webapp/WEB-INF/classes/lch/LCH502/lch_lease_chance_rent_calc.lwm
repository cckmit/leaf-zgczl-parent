        <bm:query-field field="lease_chance_id" queryOperator="="/>
    </bm:query-fields>
    <bm:operations>
        <bm:operation name="insert">
            <bm:update-sql><![CDATA[
    		
    			begin
    				delete from LCH_LEASE_CHANCE_RENT_CALC l where l.process_id = ${@process_id} and l.lease_chance_id = ${@lease_chance_id};
    				
    				insert into LCH_LEASE_CHANCE_RENT_CALC
    				(
	    				process_id,
    					lease_chance_id,
    					sale_amount,
    					downpay_amount,
    					lease_start_date,
    					payment_start_date,
    					periods_count,
    					payment_type,
    					fixed_flag,
    					year_interest_rate,
    					version_desc,
    					created_by,
    					creation_date,
    					last_updated_by,
    					last_update_date
    				)
    				values
    				(
    					${@process_id},
    					${@lease_chance_id},
    					${@sale_amount},
    					${@downpay_amount},
    					to_date(${@lease_start_date},'yyyy-mm-dd'),
    					to_date(${@payment_start_date},'yyyy-mm-dd'),
    					${@periods_count},
    					${@payment_type},
    					${@fixed_flag},
    					${@interest_rate},
    					${@version_desc},
    					${/session/@user_id},
    					sysdate,
    					${/session/@user_id},
    					sysdate
    				);
    			end;
    		
    		]]></bm:update-sql>
        </bm:operation>
    </bm:operations>
