<doc>
    <header>
        <p align="left">
			<img src="nanshan.png"/>
        </p>
    </header>
    <footer/>
    <body>
	    <p line="300"/>
        <p align="center" line="300"><t fontSize="32" fontFamily="仿宋" bold="true">法律审查意见</t></p>
		<p line="200"/>
	  
		<p align="left" line="500"><t fontSize="24" fontFamily="仿宋" bold="true">项目名称：</t><t fontSize="24" fontFamily="仿宋">${project_name!}</t></p>
	    	<p align="left" line="500"><t fontSize="24" fontFamily="仿宋" bold="true">业务单位：</t><t fontSize="24" fontFamily="仿宋">${lease_organization_n!}</t></p>
		<p align="left" line="500"><t fontSize="24" fontFamily="仿宋" bold="true">呈报人：</t><t fontSize="24" fontFamily="仿宋">${employee_id_n!}</t></p>
		<p align="left" line="500"><t fontSize="24" fontFamily="仿宋" bold="true">审查人：</t><t fontSize="24" fontFamily="仿宋">${examinant!}</t></p>
		<p line="300"/>
		
		<p align="left" line="500"><t fontSize="21" fontFamily="仿宋" bold="true">基本要素</t></p>
		<tbl>
			<tr>
				<tc width="3.5"><p><t fontSize="21" fontFamily="仿宋">租赁方式</t></p></tc>
				<tc width="11.5" span="3"><p><t fontSize="21" fontFamily="仿宋">${project_detail.business_type_n!}</t></p></tc>
			</tr>
			<tr>
				<tc width="3.5"><p><t fontSize="21" fontFamily="仿宋">租赁本金</t></p></tc>
				<tc width="4.7"><p><t fontSize="21" fontFamily="仿宋">${project_detail.finance_amount!}</t></p></tc>
				<tc width="3.4"><p><t fontSize="21" fontFamily="仿宋">融资期限</t></p></tc>
				<tc width="3.4"><p><t fontSize="21" fontFamily="仿宋">${project_detail.lease_term!}</t></p></tc>
			</tr>
			<tr>
				<tc width="3.5"><p><t fontSize="21" fontFamily="仿宋">租金支付方式</t></p></tc>
				<tc width="11.5" span="3"><p><t fontSize="21" fontFamily="仿宋">${project_detail.annual_pay_times_n!}</t></p></tc>
			</tr>
			<tr>
				<tc width="3.5"><p><t fontSize="21" fontFamily="仿宋">保证金</t></p></tc>
				<tc width="4.7"><p><t fontSize="21" fontFamily="仿宋">${project_detail.deposit!}</t></p></tc>
				<tc width="3.4"><p><t fontSize="21" fontFamily="仿宋">服务费</t></p></tc>
				<tc width="3.4"><p><t fontSize="21" fontFamily="仿宋">${project_detail.other_fee2!}</t></p></tc>
			</tr>
			<tr>
				<tc width="3.5"><p><t fontSize="21" fontFamily="仿宋">租赁利率</t></p></tc>
				<tc width="4.7"><p><t fontSize="21" fontFamily="仿宋">${project_detail.int_rate!}</t></p></tc>
				<tc width="3.4"><p><t fontSize="21" fontFamily="仿宋">IRR</t></p></tc>
				<tc width="3.4"><p><t fontSize="21" fontFamily="仿宋">${project_detail.irr!}</t></p></tc>
			</tr>
		</tbl>

		<p align="left" line="500"><t fontSize="21" fontFamily="仿宋" bold="true">项目进度</t></p>
		<tbl>
			<tr>
				<tc width="2.4"><p><t fontSize="21" fontFamily="仿宋">立项日期</t></p></tc>
				<tc width="2.4"><p><t fontSize="21" fontFamily="仿宋">报审日期</t></p></tc>
				<tc width="3.4"><p><t fontSize="21" fontFamily="仿宋">出具法审意见日期</t></p></tc>
				<tc width="3.4"><p><t fontSize="21" fontFamily="仿宋">法审问题反馈日期</t></p></tc>
				<tc width="3.4"><p><t fontSize="21" fontFamily="仿宋">项目上会日期</t></p></tc>
			</tr>
			<tr>
				<tc width="2.4"><p><t fontSize="21" fontFamily="仿宋">${created_date!}</t></p></tc>
				<tc width="2.4"><p><t fontSize="21" fontFamily="仿宋">${submit_date!}</t></p></tc>
				<tc width="3.4"><p><t fontSize="21" fontFamily="仿宋">${law_audit_date!}</t></p></tc>
				<tc width="3.4"><p><t fontSize="21" fontFamily="仿宋">${feedback_date!}</t></p></tc>
				<tc width="3.4"><p><t fontSize="21" fontFamily="仿宋">${committee_date!}</t></p></tc>
			</tr>
		</tbl>
		<p line="200"/>
		<tbl>
			<tr>
				<tc width="15" vAlign="top" span="2">
					<p line="500"><t fontSize="21" fontFamily="仿宋" bold="true">执行意见：</t></p>
					<p indLeft="0.8" line="450"><t fontSize="21" fontFamily="仿宋">${executive_opinion!}</t></p>
					<p line="300"/>
				</tc>
			</tr>
			<tr>
				<tc width="15" vAlign="top" span="2">
					<p line="500"><t fontSize="21" fontFamily="仿宋" bold="true">初审意见：</t></p>
					
					<p align="left" line="500"><t fontSize="24" fontFamily="仿宋">致业务部：</t></p>
					<p indLeft="0.8" line="450"><t fontSize="21" fontFamily="仿宋">${law_audit_opinion!}</t></p>
					<p indLeft="0.8" line="500"><t fontSize="21" fontFamily="仿宋">以上意见，敬请斟酌采纳！</t></p>
					<p align="right" line="500"><t fontSize="24" fontFamily="仿宋">法务部</t></p>
					<p align="right" line="500"><t fontSize="21" fontFamily="仿宋">　　　年　　　月　　　日</t></p>
				</tc>
			</tr>
			<tr>
				<tc width="15" vAlign="top" span="2">
					<p line="500"><t fontSize="21" fontFamily="仿宋" bold="true">初审意见反馈：</t></p>
					<p indLeft="0.8" line="450"><t fontSize="21" fontFamily="仿宋">${feedback!}</t></p>  
					<p align="right" line="500"><t fontSize="21" fontFamily="仿宋">业务经办人（签字）：_____________________</t></p>
					<p align="right" line="500"><t fontSize="21" fontFamily="仿宋">_____________________</t></p>          
					<p align="right" line="500"><t fontSize="21" fontFamily="仿宋" bold="true">　　　年　　　月　　　日</t></p>
				</tc>
			</tr>
			<tr>
				<tc width="15" vAlign="top" span="2">
					<p line="500"><t fontSize="21" fontFamily="仿宋" bold="true">终审意见（结论）：</t></p>
					<p indLeft="0.8" line="450"><t fontSize="21" fontFamily="仿宋">${conclusion!}</t></p>
					<p line="300"/>
				</tc>
			</tr>
			<tr>
				<tc width="3" vAlign="top">
					<p><t fontSize="21" fontFamily="仿宋" bold="true">法审意见审查人签字</t></p>
				</tc>
				<tc width="12" vAlign="top">
					<p/>
					<p/>
					<p/>
					<p align="right"><t fontSize="21" fontFamily="仿宋" bold="true">　　　年　　　月　　　日</t></p>
				</tc>
			</tr>
			<tr>
				<tc width="3" vAlign="top">
					<p><t fontSize="21" fontFamily="仿宋" bold="true">法务总经理签字</t></p>
				</tc>
				<tc width="12" vAlign="top">
					<p/>
					<p/>
					<p/>
					<p align="right"><t fontSize="21" fontFamily="仿宋" bold="true">　　　年　　　月　　　日</t></p>
				</tc>
			</tr>
		</tbl>
    </body>
</doc>